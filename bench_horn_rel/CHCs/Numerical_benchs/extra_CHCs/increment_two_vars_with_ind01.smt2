(declare-rel fail ())
(declare-rel inv (Int Int Int))
(declare-var x Int)
(declare-var y Int)
(declare-var i Int)
(declare-var x1 Int)
(declare-var y1 Int)
(declare-var i1 Int)

(rule (=> (and 
	(= x 0)
	(= y 100)
	(= i 0)) 
	(inv x y i)))
(rule (=> (and 
	(inv x y i)
	(< i 100)
	(= x1 (+ x 2))
	(= y1 (+ y 1))
	(= i1 (+ i 1)))
	(inv x1 y1 i1)))
(rule (=> (and 
	(inv x y i)
	(>= i 100))
	fail))
(query fail)